# ═══════════════════════════════════════════════════════════════
# 🚀 CRM Pro — Environment Configuration
# Скопируйте в .env и настройте под свой проект
# ═══════════════════════════════════════════════════════════════

APP_NAME="CRM Pro"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost:8000
APP_PORT=8000

# ─────────────────────────────────────────────────────────────
# 🗄️ Database (PostgreSQL)
# ─────────────────────────────────────────────────────────────
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=crm_db
DB_USERNAME=crm_user
DB_PASSWORD=CrmSecurePass2024

# ─────────────────────────────────────────────────────────────
# 🔴 Redis
# ─────────────────────────────────────────────────────────────
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null

# ─────────────────────────────────────────────────────────────
# 💾 Cache, Session, Queue
# ─────────────────────────────────────────────────────────────
CACHE_STORE=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# ─────────────────────────────────────────────────────────────
# 📝 Logging
# ─────────────────────────────────────────────────────────────
LOG_CHANNEL=stack
LOG_LEVEL=info

# ─────────────────────────────────────────────────────────────
# 📧 Mail (optional)
# ─────────────────────────────────────────────────────────────
MAIL_MAILER=log
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="crm@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ─────────────────────────────────────────────────────────────
# 🔐 API Keys (настраиваются в админ-панели /admin/settings)
# Эти переменные опциональны — можно настроить через UI
# ─────────────────────────────────────────────────────────────
# META_PAGE_ID=
# META_ACCESS_TOKEN=
# META_WEBHOOK_VERIFY_TOKEN=
# TELEGRAM_BOT_TOKEN=
# GEMINI_API_KEY=
