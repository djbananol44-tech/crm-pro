# ═══════════════════════════════════════════════════════════════════════════
# JGGL CRM — .gitignore
# ═══════════════════════════════════════════════════════════════════════════

# ─────────────────────────────────────────────────────────────────────────────
# Dependencies
# ─────────────────────────────────────────────────────────────────────────────
/node_modules
/vendor

# ─────────────────────────────────────────────────────────────────────────────
# Laravel Build & Runtime
# ─────────────────────────────────────────────────────────────────────────────
/public/build
/public/hot
/public/storage
/storage/*.key
/bootstrap/cache/*.php

# ─────────────────────────────────────────────────────────────────────────────
# Storage (Runtime Data)
# ─────────────────────────────────────────────────────────────────────────────
/storage/app/exports/
/storage/app/backups/
/storage/logs/*.log
/storage/framework/cache/data/*
/storage/framework/sessions/*
/storage/framework/views/*.php

# ─────────────────────────────────────────────────────────────────────────────
# Environment Files (SECRETS!)
# ─────────────────────────────────────────────────────────────────────────────
.env
.env.*
!.env.example

# ─────────────────────────────────────────────────────────────────────────────
# IDE & Editors
# ─────────────────────────────────────────────────────────────────────────────
/.fleet
/.idea
/.vscode
*.swp
*.swo
*~

# ─────────────────────────────────────────────────────────────────────────────
# Testing
# ─────────────────────────────────────────────────────────────────────────────
.phpunit.result.cache
/.phpunit.cache
/coverage

# ─────────────────────────────────────────────────────────────────────────────
# Debug & Logs
# ─────────────────────────────────────────────────────────────────────────────
npm-debug.log
yarn-error.log
*.log

# ─────────────────────────────────────────────────────────────────────────────
# OS Files
# ─────────────────────────────────────────────────────────────────────────────
.DS_Store
Thumbs.db

# ─────────────────────────────────────────────────────────────────────────────
# Legacy (no longer used)
# ─────────────────────────────────────────────────────────────────────────────
Homestead.json
Homestead.yaml
auth.json
