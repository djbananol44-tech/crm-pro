# ═══════════════════════════════════════════════════════════════════════════
# JGGL CRM — EditorConfig
# https://editorconfig.org
# ═══════════════════════════════════════════════════════════════════════════

root = true

# ─────────────────────────────────────────────────────────────────────────────
# Default settings for all files
# ─────────────────────────────────────────────────────────────────────────────
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# ─────────────────────────────────────────────────────────────────────────────
# PHP (Laravel PSR-12)
# ─────────────────────────────────────────────────────────────────────────────
[*.php]
indent_size = 4

# ─────────────────────────────────────────────────────────────────────────────
# JavaScript / TypeScript / JSX
# ─────────────────────────────────────────────────────────────────────────────
[*.{js,jsx,ts,tsx}]
indent_size = 2

# ─────────────────────────────────────────────────────────────────────────────
# CSS / SCSS / Tailwind
# ─────────────────────────────────────────────────────────────────────────────
[*.{css,scss,sass}]
indent_size = 2

# ─────────────────────────────────────────────────────────────────────────────
# JSON / YAML / Config files
# ─────────────────────────────────────────────────────────────────────────────
[*.{json,yml,yaml}]
indent_size = 2

[composer.json]
indent_size = 4

[package.json]
indent_size = 4

# ─────────────────────────────────────────────────────────────────────────────
# Markdown
# ─────────────────────────────────────────────────────────────────────────────
[*.md]
trim_trailing_whitespace = false

# ─────────────────────────────────────────────────────────────────────────────
# Shell scripts
# ─────────────────────────────────────────────────────────────────────────────
[*.sh]
indent_size = 4

# ─────────────────────────────────────────────────────────────────────────────
# Docker / Makefile
# ─────────────────────────────────────────────────────────────────────────────
[{Dockerfile,docker-compose*.yml}]
indent_size = 2

[Makefile]
indent_style = tab
